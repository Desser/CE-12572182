<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yalantis.desser.ce_1257218.MainActivity"
    android:background="@color/background_grey">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_item">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_heading"
                    android:id="@+id/main_text_heading"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/main_text"
                    android:textColor="@color/text_black"
                    android:autoText="false" />

                <TextView
                    android:layout_width="@dimen/badge_width"
                    android:layout_height="@dimen/badge_height"
                    android:background="@drawable/rounded_corners"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_status"
                    android:id="@+id/main_text_status"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/text_white"
                    android:textAlignment="center"
                    android:singleLine="false"
                    android:gravity="center_vertical|center_horizontal" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_grey" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_created"
                    android:id="@+id/main_text_created"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/text_item_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_date_created"
                    android:id="@+id/main_text_date_created"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/text_black"/>
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_grey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_register"
                    android:id="@+id/main_text_register"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/text_item_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_date_register"
                    android:id="@+id/main_text_date_register"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/text_black"/>
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_grey" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_solve"
                    android:id="@+id/main_text_solve"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/text_item_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_date_solve"
                    android:id="@+id/main_text_date_solve"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/text_black"
                    />

            </FrameLayout>




            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_grey" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_responsible"
                    android:id="@+id/main_text_responsible"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/text_item_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/main_text_responsible_item"
                    android:id="@+id/main_text_responsible_item"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/text_black"/>
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_text_description"
                android:id="@+id/main_text_description"
                android:layout_weight="1.45"
                android:paddingTop="@dimen/padding_text_description"
                android:paddingBottom="@dimen/padding_text_description"
                android:textColor="@color/text_black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="132dp">


            </FrameLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

